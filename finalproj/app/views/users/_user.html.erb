<%
  if user.avatar.url.nil?
    av = @default_avatar
  else
    av = user.avatar.url
  end
%>
<div id='user-wrapper'>
	<div id='avatar'>
	  <%=image_tag(av, :class => "image_avatar")%>
	</div>
	<div id='user-credentials'>
	  <%= link_to user_profile_path(user) do %>
	    <%= user.username %>
	  <% end %>
	  <br>
	  <%= user.reputation %> Rep
	</div>
</div>
