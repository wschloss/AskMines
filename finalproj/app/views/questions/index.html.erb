<h1>Listing Questions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Upvotes</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td><%= question.upvotes %></td>
        <td><%= question.user.username %></td>
        <td><%= link_to 'Show', question %></td>
        <% if user_signed_in? && (current_user.id == question.user_id || current_user.isadmin) %>
          <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <% end %>
        <% if user_signed_in? && current_user.isadmin %>
          <td><%= link_to 'Delete', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if !user_signed_in? %>
  <p>Sign in to post a question!</p>
<% else %>
  <%= link_to 'New Question', new_question_path %>
<% end %>
