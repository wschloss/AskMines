<%= render @question %>

<%= @question.content %>
<%= button_to 'Upvote!', question_upvote_path(@question) %>

<hr>
<% unless @answers.empty? %>
  <p>Answers</p>
  <% @answers.each do |ans| %>
    <%= render ans %>
  <% end %>
<% end %>

<hr>

<% if !user_signed_in? %>
  <p>Sign in to add your answer!<p>
<% elsif current_user.id != @question.user_id %>
  <p>Submit a new answer...</p>
  <%= render 'answers/form' %>
<% end %>

<%= link_to 'Back', questions_path %>